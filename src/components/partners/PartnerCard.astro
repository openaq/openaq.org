---
const { title, url, image } = Astro.props;

import { Image } from "astro:assets";
---

<style lang="scss">
  @use "openaq-design-system/scss/variables";
  @use "openaq-design-system/scss/mixins/index.scss" as mixins;

  .partner-card {
    background-color: white;
    display: flex;
    height: 180px;
    width: 180px;
    border: 1px solid variables.$smoke10;
    border-radius: 22px;
    padding: 20px 0;
    position: relative;

    &__img {
      display: flex;
      flex: 1;
      justify-content: center;
      align-items: center;
      padding: 0 16px;

      img {
        width: 100%;
        height: auto;
      }
    }

    .partner-card-link::after {
      content: '';
      position: absolute;
      inset: 0;
    }
  }
</style>
<li class="partner-card">
  <div class="partner-card__img">
    <a href={url} target="_blank" rel="noopener noreferrer" class="partner-card-link">
      <Image src={image} alt={title} />
    </a>
  </div>
</li>
