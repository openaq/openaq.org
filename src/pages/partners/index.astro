    width: 800px;
    z-index: 2;
  }
</style> -->
<PageLayout>
  <h1 class="gradient-title">Partners</h1>
  <section class="partners-grid">
    {
      allPartners.map((partner) => (
        <PartnerCard
          name={partner.data.name}
          title={partner.data.title}
          portrait={partner.data.image}
          homepage={partner.data.homepage}
        />
      ))
    }
  </section>
</PageLayout>
