---
import BaseLayout from '@layouts/BaseLayout.astro';
import Breadcrumb from '@components/Breadcrumb.astro';
import Bubbles from '@components/Bubbles.astro';

import dayjs from 'dayjs';
import utc from 'dayjs/plugin/utc';

dayjs.extend(utc);

const { pageTitle, frontmatter } = Astro.props;

const lastModified = dayjs(frontmatter.lastModified)
  .utc()
  .format('DD MMMM YYYY');
---

<style lang="scss">
  .content {
    min-height: 100vh;
    width: 800px;
    margin: 0 auto;
    z-index: 2;
  }
</style>

<BaseLayout>
  <Breadcrumb />
  <Bubbles />
  <div class="content">
    <h1 class="type-display-1 gradient-title">{pageTitle}</h1>
    <p class="type-body-1">Last updated: {lastModified}</p>
    <slot />
  </div>
  <slot name="banner" slot="banner" />
  <slot name="banner-low" slot="banner-low" />
</BaseLayout>
